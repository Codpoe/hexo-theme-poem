<!doctype html>
<html>
<head>
    <%- partial('_partial/head') %>
    <link rel="stylesheet" href="/css/archive.bundle.css">
    <script>
        window.onload = function (ev) {
            var wrapper = document.querySelector('.wrapper');
            wrapper.classList.add('wrapper--show');
        }
    </script>
</head>
<body>
    <%- partial('_partial/header') %>
    
    <div class="wrapper">
        <div class="container">
            <header class="year-wrapper">
                <h1 class="year"><%= page.category %></h1>
                <h2 class="amount">- <%= page.posts.length %> -</h2>
            </header>
            <ul class="archive-posts">
                <% page.posts.forEach(function(post) { %>
                    <li class="archive-post-wrapper">
                        <div class="post-date">
                            <%- post.date.format('ll') %>
                        </div>
                        <h2 class="post-title">
                            <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                        </h2>
                    </li>
                <% }) %>
            </ul>
        </div>
        <%- partial('_partial/footer') %>
    </div>

    <script src="/js/archive.bundle.js"></script>
</body>
</html>